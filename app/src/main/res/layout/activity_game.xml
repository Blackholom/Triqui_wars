                android:id="@+id/but10"
                android:layout_column="2"
                android:src="@drawable/darth_vader_big"
                android:layout_gravity="bottom|center_horizontal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but11"
                android:layout_column="2"
                android:src="@drawable/darth_vader_big"
                android:layout_gravity="bottom|center_horizontal" />
